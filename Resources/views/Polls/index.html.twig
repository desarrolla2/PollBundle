{% extends '::base.html.twig' %}
{% block content %}
<div class="page-content">
    <section>
        <header>
            <h2>Encuestas activas</h2>
        </header>                  
        <ul>
        {% for poll in polls %}
                <li><a href="{{ url('_poll_show', { 'id': poll.id, 'slug': poll.slug }) }}">{{ poll.title }}</a></li>
        {% endfor %}
        </ul>
    </section>
</div>
{% endblock %}